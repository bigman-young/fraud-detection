<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Appender for all logs -->
        <RollingFile name="AllFile" 
                     fileName="logs/fraud-detection.log"
                     filePattern="logs/fraud-detection-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- File Appender specifically for fraud alerts -->
        <RollingFile name="AlertFile" 
                     fileName="logs/fraud-alerts.log"
                     filePattern="logs/fraud-alerts-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [ALERT] %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="90"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Fraud Alerts Logger -->
        <Logger name="FraudAlerts" level="INFO" additivity="false">
            <AppenderRef ref="AlertFile"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Application Logger -->
        <Logger name="com.hsbc.fraud" level="INFO" additivity="false">
            <AppenderRef ref="AllFile"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Flink Logger -->
        <Logger name="org.apache.flink" level="WARN" additivity="false">
            <AppenderRef ref="AllFile"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Kafka Logger -->
        <Logger name="org.apache.kafka" level="WARN" additivity="false">
            <AppenderRef ref="AllFile"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AllFile"/>
        </Root>
    </Loggers>
</Configuration>

